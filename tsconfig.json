{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2020",
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "lib": ["ES2020"],
    "sourceMap": true,
    "outDir": "./dist",
    "moduleResolution": "node",
    "removeComments": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "declaration": true,
    "baseUrl": ".",
    "typeRoots": ["src/config/types", "node_modules/@types"],
    "paths": {
      "*": ["./src/*", "./tests/*"]
    }
  },
  "exclude": ["node_modules"],
  "include": ["./src/**/*.ts", "./tests/**/*.ts"]
}
